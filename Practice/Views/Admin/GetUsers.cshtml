@model IEnumerable<PersonManagement.MVC.ViewModels.UserViewModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "GetUsers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>GetUsers</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.ActionLink("Delete", "DeleteUser", new { username = item.UserName })
            </td>
        </tr>
        }
    </tbody>
</table>

<a class="btn btn-danger" asp-controller="Authentication" asp-action="Signout">Sign out</a>