@model IEnumerable<PersonManagement.MVC.ViewModels.AcademyEventViewModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "My";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body style="background-color: white;">
    <h1>My</h1>

    <p>
        <a class="btn btn-primary" asp-controller="AcademyEvents" asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateAndTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ImgUrl)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AuthorUsername)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateAndTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ImgUrl)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AuthorUsername)
                    </td>
                    <td>
                        @Html.ActionLink("Details", "Details", new {  id=item.Id  }) 
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>

<a class="btn btn-danger" asp-controller="AcademyEvents" asp-action="Index">Return back</a>