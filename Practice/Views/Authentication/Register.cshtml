@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h3>
    Register page
</h3>
<form asp-controller="Authentication" asp-action="Register" method="post">
    <label for="email"><b>Email</b></label>
    <input type="text" name="userName" value="" id="email" />

    <label for="psw"><b>Password</b></label>
    <input type="password" name="password" value="" id="psw" />

    <label for="psw"><b>Repeat password</b></label>
    <input type="password" name="password" value="" id="psw-repeat" />

    <button type="submit" class="btn btn-primary registerbtn"> Register </button>
</form>